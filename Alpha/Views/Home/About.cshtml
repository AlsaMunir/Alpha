@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
    <!-- Header -->
    <header style="background-color: #ffbb; color: #fff; text-align: center; padding: 20px 0;">
        <h1 style="margin: 0;">About Alpha</h1>
    </header>

    <!-- About Section -->
    <section style="padding: 20px; background-color: #f9f9f9; text-align: center;">
        <p style="margin: 0 auto; max-width: 800px;">
            Welcome to <strong>Alpha</strong>, your one-stop destination for style, elegance, and self-care.
            We’re passionate about offering the finest selection of fashion and lifestyle products, carefully
            curated to meet your unique tastes and needs.
        </p>
    </section>

    <!-- Categories Section -->
    <section style="padding: 20px;">
        <div style="max-width: 1000px; margin: 0 auto;">
            <h2 style="text-align: center; color: #333;">Our Categories</h2>

            <!-- Men's Fashion -->
            <div style="margin: 20px 0; padding: 20px; background-color: #e8f4ff; border-radius: 8px;">
                <h3 style="color: #0077cc; margin-bottom: 10px;">Men's Fashion</h3>
                <p>
                    Explore contemporary styles for every occasion. From timeless classics to trendy outfits,
                    our men's fashion collection is designed to inspire confidence and elegance in your wardrobe.
                </p>
            </div>

            <!-- Women's Fashion -->
            <div style="margin: 20px 0; padding: 20px; background-color: #ffeaf1; border-radius: 8px;">
                <h3 style="color: #d63384; margin-bottom: 10px;">Women's Fashion</h3>
                <p>
                    Celebrate your individuality with our exclusive women’s fashion line. Whether it’s casual chic
                    or formal wear, we have styles to suit every mood and moment.
                </p>
            </div>

            <!-- Accessories -->
            <div style="margin: 20px 0; padding: 20px; background-color: #f7f7f7; border-radius: 8px;">
                <h3 style="color: #444; margin-bottom: 10px;">Accessories</h3>
                <p>
                    Complete your look with our wide range of accessories. From statement pieces to minimalist
                    designs, find the perfect add-ons to elevate your outfits.
                </p>
            </div>

            <!-- Skin Care -->
            <div style="margin: 20px 0; padding: 20px; background-color: #e3fcec; border-radius: 8px;">
                <h3 style="color: #198754; margin-bottom: 10px;">Skin Care</h3>
                <p>
                    Pamper yourself with our top-notch skin care products. Designed for all skin types, our
                    collection combines luxury and care, ensuring you look and feel your best.
                </p>
            </div>
        </div>
    </section>

    <!-- Why Choose Alpha -->
    <section style="padding: 20px; background-color: #f0f0f0;">
        <div style="max-width: 800px; margin: 0 auto; text-align: center;">
            <h2 style="color: #333;">Why Choose Alpha?</h2>
            <p>
                At Alpha, we prioritize quality, style, and customer satisfaction. Each product is thoughtfully
                selected to bring you the best in fashion and lifestyle. Join our journey to redefine elegance and
                empower individuality.
            </p>
        </div>
    </section>

   